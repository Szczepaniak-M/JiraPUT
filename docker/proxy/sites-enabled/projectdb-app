server {
  listen                80;
  server_name           _;

  location / {
    access_log          /var/log/nginx/projectdb-app.access.log;
    error_log           /var/log/nginx/projectdb-app.error.log;
    proxy_pass        http://projectdb-app:8080;
    proxy_redirect    off;
    proxy_set_header  Host             $http_host;
    proxy_set_header  X-Real-IP        $remote_addr;
    proxy_set_header  X-Forwarded-For  $proxy_add_x_forwarded_for;
    proxy_set_header  X-Forwarded-Protocol $scheme;
  }
}
